<%= simple_form_for [recipe, review], remote: true do |form| %>
  <%= form.input :content %>
  <div class="form-group select required">
    <label class="form-control-label select required" for="review_rating">Rating <abbr title="required">*</abbr></label>
    <select class="form-control select required" name="review[rating]" id="review_rating">
      <option value=""></option>
      <option value="1">1 star</option>
      <option value="2">2 stars</option>
      <option value="3">3 stars</option>
      <option value="4">4 stars</option>
      <option value="5">5 stars</option>
    </select>
  </div>
  <%= hidden_field_tag(:recipe_id, recipe.id) %>

  <%= form.submit "Add Review", class: "btn btn-primary" %>
<% end %>
