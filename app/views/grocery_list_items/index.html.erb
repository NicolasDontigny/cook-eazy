<div class="container">

  <h1>My Grocery items</h1>

  <%= render "form" %>

  <ul id="grocery-items-list" class="mt-3">
    <% @grocery_list_items.each do |item| %>
      <li>
        <%#= item.checked ? "Checked" : "Unchecked" %>
        <% if item.checked %>
          <%= link_to uncheck_grocery_item_path(item), method: 'patch', class: "no-link" do %>
            <i class="far fa-check-square"></i>
          <% end %>
        <% else %>
          <%= link_to check_grocery_item_path(item), method: 'patch', class: "no-link" do %>
            <i class="far fa-square"></i>
          <% end %>
        <% end %>
        <%= item.ingredient.name %>
        <span class="quantity">
          <%= link_to "-", decrease_grocery_item_path(item), method: 'patch', class: "no-link" %>
          <%= item.quantity %>
          <%= link_to "+", increase_grocery_item_path(item), method: 'patch', class: "no-link" %>
        </span>
      </li>
    <% end %>
  </ul>

</div>
