  <div class="landing-btn">

    <%# unless user_signed_in? %>
    <!-- <div class="mt-5"> -->
      <%= link_to('Browse Recipes', recipes_path, class: "button-banner") %>

    <!-- </div> -->
    <%# end %>


    </div>
  </div>
</div>
