<div class="recipe-card" style="width:420px;margin: 15px;padding: 10px">
  <div class="recipe-image" style="position: relative; display: inline-block;">
    <img src="https://images.unsplash.com/photo-1543198453-ed52dc5cbfc0?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1190&q=80" alt="Smiley face" height="200" width="400">
    <a href="#">
    <i class="fas fa-heart fa-2x" style="position: absolute;top:15px;right:15px;color:red;"></i></a>
  </div>
  <div class="recipe-info-container" style=" ">
    <div class="recipe-info" style="border: #E8E8E8 solid;display:flex; justify-content:space-between; padding: 10px;">
      <div class="recipe-name">
        <h4><%= @recipe.name %></h4>
      </div>
      <div class="recipe-details">
        <p>Prep time: <%=  @recipe.prep_time %></p>
        <p>Difficulty:  <%= @recipe.difficulty %></p>
      </div>
    </div>
  </div>
    <div class="recipe-ingredients" style=" border: #E8E8E8 solid;border-top-color: #FFFFFF;width:400px;padding: 10px; display:flex; flex-direction: column; align-items: flex-start; ">
      <h4>Ingredients</h4>
      <% recipe_items = RecipeItem.where("recipe_id=" + @recipe.id.to_s) %>
      <% recipe_items.each do |item| %>
        <% i = Ingredient.find(item.ingredient_id) %>
        <li><%= i.name %></li>
      <% end %>
    </div>
</div>

