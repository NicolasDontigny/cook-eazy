    <div class="mt-1 d-flex align-items-center recipe-card-ingredients color-secondary">
      Ingredients
      <span class="ml-3 mr-3 ">
        <i class="far fa-times-circle color-main-red mr-0"></i> <%= recipe.how_many_ingredients_to_buy(@fridge_items) %>
      </span>
      <span class="">
        <i class="far fa-check-circle color-main-green mr-0"></i> <%= recipe.matching_ingredients(@fridge_items).count %>
      </span>
    </div>

    <div class="mt-2 d-flex align-items-center">
      <%= image_tag "stopwatch-gray.png", class: "stopwatch-icon" %>
      <% time = recipe.prep_time + recipe.cook_time %>
      <% if time > 60 %>
        <%= (time / 60).floor %> h
        <% unless time % 60 == 0 %>
          <%= time % 60 %> min
        <% end %>
      <% else %>
        <%= time %> min
      <% end %>


    </div>


    <div class="mt-2">
      <%= render 'star_rating', recipe: recipe %>
    </div>
  </div>
