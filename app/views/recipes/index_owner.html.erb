<div class="container owner__container">

  <div class="d-flex justify-content-between align-items-center my-3 top-header">
    <h2>My Recipes</h2>

    <%= link_to "Add your own recipe!", new_recipe_path, class: "button button-main-green" %>
  </div>

  <% @recipes.each do |recipe| %>

    <div class="card-product" data-recipe-id="<%= recipe.id %>">
      <img src="<%= recipe.photo %>" alt="food image">
      <div class="card-product-infos">
        <div class="card-product-title">
          <h3><%= recipe.name %></h3>
          
        </div>
        <div class="info_wrapper">
          <div class="">
            <ul>
              <li><%= render 'star_rating', recipe: recipe %></li>
              <li><i class="fas fa-leaf"></i> Prep. time: <% if recipe.prep_time > 60 %>
                              <%= (recipe.prep_time / 60).floor %>
                              <% unless recipe.prep_time % 60 == 0 %> h
                                <%= recipe.prep_time % 60 %> min
                              <% end %>
                              <% else %>
                                <%= recipe.prep_time %> min
                              <% end %>
              </li>
              <li><i class="fas fa-leaf"></i> Cook. time: <% if recipe.cook_time > 60 %>
                                <%= (recipe.cook_time / 60).floor %>
                                <% unless recipe.cook_time % 60 == 0 %> h
                                  <%= recipe.cook_time % 60 %> min
                                <% end %>
                                <% else %>
                                  <%= recipe.cook_time %> min
                                <% end %>
              </li>
              <li><i class="fas fa-leaf"></i> serves: <%= recipe.servings %> people</li>
              <li><i class="fas fa-leaf"></i> <%= recipe.steps.length %> steps</li>
            </ul>
          </div>
        </div>
        <div class="card__button">
          <%= link_to "More info", recipe_path(recipe), class: "button button-main-red" %>
        </div>
      </div>
    </div>


  <% end %>

</div>
