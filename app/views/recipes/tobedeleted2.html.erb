<div class="d-flex main-container">
  <div class="ingredients-sidebar">
    <h1>Ingredients</h1>
    <div class="ingredient">
      <% recipe_items = RecipeItem.where("recipe_id=" + @recipe.id.to_s) %>
      <% recipe_items.each do |item| %>
        <% i = Ingredient.find(item.ingredient_id) %>
        <li><%= i.name %></li>
    <% end %>
        <li> spinash </li>
    </div>
    <button type="button" class="btn btn-success" style="margin-top: 20px;">Add Ingredient</button>
  </div>

  <div class="recipe-info">
    <div class="recipe-title">
      <h1><%= @recipe.name %></h1>
    </div>
    <div class="d-flex justify-content-end  recipe-details">
      <div class="recipe-preptime">
      <h2><%=  @recipe.prep_time %></h2>
      <p>Minutes</p>
      </div>
      <div class="recipe-difficulty">
      <h2><%=  @recipe.difficulty %></h2>
      <p>Difficulty</p>
      </div>
      <div>
      <h2 class="calories">340</h2>
      <p>Calories</p>
      </div>
    </div>
  </div>
  <div class="recipe-image" style="position: relative;">
    <img src="https://images.unsplash.com/photo-1543198453-ed52dc5cbfc0?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1190&q=80" alt="Smiley face" style="width: 440px">
    <a href="#">
    <i class="fas fa-heart fa-2x" style="position: absolute;top:15px;right:15px;color:red;"></i></a>
  </div>
</div>
    <!-- Including Bootstrap JS (with its Popper.js / jQuery dependency) so that dynamic components work -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js"></script>
