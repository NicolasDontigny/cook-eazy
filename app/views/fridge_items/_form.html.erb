<button data-toggle="collapse" data-target="#form">Add an item <i class="fas fa-chevron-circle-down fridge-arrow"><span class="ingredient-name"></i></span></button>
<div id="form" class="collapse">
  <%= simple_form_for [@user, @fridge_item], url: 'fridge', remote: true do |form| %>
    <%= form.association :ingredient, input_html: { class: "select2", multiple: false } %>
    <%= form.input :quantity %>
    <%= form.submit "Add Item", class: "button button-main-green fridge-button" %>
  <% end %>
</div>
