<div class="container">
  <div class="fridge-item-container">
    <div class="row">
      <div class="col-xs-12 col-sm-4 offset-sm-4">
        <h2>My Fridge items</h2>

        <%= render "form" %>
      </div>
    </div>
  </div>

  <ul id="fridge-items-list" class="mt-3">
    <% @fridge_items.each do |item| %>
      <%= render "fridge_item", item: item %>
    <% end %>
  </ul>

</div>
