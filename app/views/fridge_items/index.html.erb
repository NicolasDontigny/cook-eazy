<h1>FridgeItems#index</h1>

<%= form_tag add_fridge_item_path, method: :patch do %>

  <div class="form-group search-form-group">
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Add an ingredient"
    %>
  </div>
<% end %>


<% @fridge_items.each do |item| %>
  <%= link_to recipe_path(item.ingredient) %>
    <h2><%= item.ingredient.name %></h2>
    <p><%= item.ingredient.unit_of_measure %> <%= item.quantity %> </p>
<% end %>
