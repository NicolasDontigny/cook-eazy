var insertItem = (itemHTML) => {
  const id = <%= @grocery_item.id %>;
  const grocery_list = document.querySelector('.category-wrapper');
  grid = document.querySelector('.grocery-items__wrapper');
  grid.remove();
  grocery_list.insertAdjacentHTML("beforeend",itemHTML);
  newItem = document.querySelector(`.grocery-item-card[data-item-id='${id}']`);
  newItem.style.opacity = 0;
  setTimeout(() => { newItem.style.opacity = 1 }, 200);
}

insertItem('<%= j render("category_grid_wrapper", categories: @categories, grocery_items: @grocery_items) %>');
