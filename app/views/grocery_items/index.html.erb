<div class="container">
  <div class="grocery-item-container">
    <div class="row">
      <div class="col-xs-12 col-sm-6 offset-sm-3">
        <h2>My Grocery items</h2>

        <%= render "form", user: current_user, grocery_item: GroceryItem.new %>

        <div id="grocery-items-list" class="mt-3">
          <% @grocery_items.each do |item| %>
            <%= render "grocery_item", item: item %>
          <% end %>
        </div>

        <%= link_to "Update Grocery List", grocery_items_path, method: :patch, class: "btn btn-warning btn-lg", id: "update-grocery", remote: true %>

      </div>
    </div>
  </div>
</div>
