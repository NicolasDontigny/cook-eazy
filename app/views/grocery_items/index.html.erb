<div class="container">
  <div class="grocery-item-container">
    <div class="row">
      <div class="col-12 col-md-8 offset-md-2">

        <h2>My Grocery Items</h2>

        <%= render "form", user: current_user, grocery_item: GroceryItem.new %>

        <div id="grocery-items-list" class="mt-3">
          <% @grocery_items.each do |item| %>
            <%= render "grocery_item", item: item %>
          <% end %>
        </div>

        <%= link_to "Update Grocery List", grocery_items_path, method: :patch, class: "button button-main-red button-center button-lg", id: "update-grocery", remote: true %>
      </div>
    </div>
  </div>
</div>
