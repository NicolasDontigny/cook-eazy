<div class="row ingredients-row">
  <!-- List the Ingredients -->
  <!-- <div class="list-ingredients col-3"> -->
  <div class="ingredients-list col-3">

    <div id="title-step">Ingredients</div>

    <ul>
      <% @recipe.recipe_items.each do |recipe_item| %>
        <li class="ingredient-green">
          <i class="fas fa-leaf"></i>
          <strong><%= recipe_item.quantity %> <%= recipe_item.ingredient.unit_of_measure %></strong>
          <%= recipe_item.ingredient.name %>
        </li>
      <% end %>
    </ul>

  </div>

  <!-- list the steps -->
  <div class="col-9">
    <div class="steps-header d-flex justify-content-between align-items-center"
      style = "background-image: linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4)), url(<%= @recipe.photo %>);">
      <!-- <img src="<%= @recipe.photo %>"> -->
      <h1 ><%= @recipe.name %></h1>
    </div>
    <div id="progress-bar" class="d-flex">
      <%# @recipe.steps.each do |step| %>
       <!--  <div class="progress-fraction flex-grow-1">

        </div> -->
      <%# end %>
      <%= render "progress_bar", recipe: @recipe %>
    </div>
    <%= render 'steps', steps: @steps %>


      <div id="done-cooking" class="mt-3" style="text-align: center;display: none;">
        <% @recipe_ingredients = @recipe.ingredients %>
        <%# raise %>
        <%= link_to "Done Cooking", empty_fridge_path(@recipe), method: :patch, remote: true, class: "button button-main-red button-center button-lg" %>
      </div>
      <a class="d-flex justify-content-center mt-3" id="back-to-recipe" href="/recipes/<%= @recipe.id %>">Back to Recipe</a>
  </div>

</div>
